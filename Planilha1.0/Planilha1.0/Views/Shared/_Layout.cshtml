<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fisco Brasil</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script defer src="~/Scripts/inputmask/jquery.inputmask.min.js"></script>
    <script defer src="~/Scripts/formatmoney.js"></script>
    <script defer src="~/Scripts/validacoes.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Proposta Orçamentária", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li><a href="/home"><span class="fa fa-home"></span> Início</a></li>
                        <li><a href="/valores/Categoria"><span class="fa fa-list-ul"></span> Categorias</a></li>
                        <li><a href="/home/contact"><span class="fa fa-phone-square"></span> Contato</a></li>
                    </ul>

                    using (Html.BeginForm("LogOff", "Conta", FormMethod.Post, new { id = "logoffForm" }))
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#"><span class="fa fa-user-circle"></span> Olá @Session["Usuario"]</a></li>
                            <li><a href="javascript:document.getElementById('logoffForm').submit()">Sair <span class="fa fa-sign-out"></span></a></li>
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/conta/login"><span class="fa fa-sign-in"></span> Login</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @if (Request.IsAuthenticated)
        {
            <hr />

            <footer>
                <p>&copy; @DateTime.Now.Year - Fisco Brasil</p>
            </footer>
        }
        else
        {
            <footer>
                <p id="fiscoBr">&copy; @DateTime.Now.Year - Fisco Brasil</p>
            </footer>
        }

    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
