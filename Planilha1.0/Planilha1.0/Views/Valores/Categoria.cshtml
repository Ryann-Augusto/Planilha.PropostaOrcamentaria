
@{
    List<md_Planilha.mdValores> categoria = ViewBag.categoria;
    ViewBag.Title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["sucesso"] != null)
{
    <div class="alert alert-success">@TempData["sucesso"]</div>
}
@if (TempData["erro"] != null)
{
    <div class="alert alert-danger">@TempData["erro"]</div>
}

<h2>Categorias</h2>


<div class="container">
    <div class="jumbotron">
        <form action="/valores/adicionarcategoria">
            <table class="table">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Categoria</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in categoria)
                    {
                    <tr>
                        <td>@cat.Codigo</td>
                        <td>@cat.Categoria</td>
                        <td>
                            <a style="font-size:15px" class="btn btn-primary fa fa-pencil" href="/valores/@cat.Codigo/alterarcategoria"><span style="font-family:Arial"> <b>Alterar</b></span></a>
                        </td>
                        <td>
                            <a class="btn btn-danger fa fa-trash" style="font-size:15px;" href="/valores/@cat.Codigo/deletarcategoria" onclick="ValidaExclusaoCategoria(@cat.Codigo, event);"><span style="font-family:Arial"> <b>Excluir</b></span></a>
                        </td>
                    </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td>
                            <label class="fa fa-plus-circle"></label>
                        </td>

                        <td>
                            <input type="text" name="categoria" class="form-control" id="categoria" />
                        </td>
                        <td>
                            <button style="font-size:16px;" class="btn btn-success fa fa-save"><span style="font-family:Arial;"><b> Salvar</b></span></button>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>

