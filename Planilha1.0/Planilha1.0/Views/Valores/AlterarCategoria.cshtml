
@{
    ViewBag.Title = "AlterarCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
    md_Planilha.mdValores valores = ViewBag.alterarCategoria;
}

<h2>AlterarCategoria</h2>

@*Botão para volta à pagina anterior 
<a class="btn btn-default" @Html.ActionLink("Voltar", null, null, null, new { href = Request.UrlReferrer })</a>*@

<div class="container">
    <div class="jumbotron">
        <div class="bottom">
            <a class="btn btn-default" href="/valores/categoria">Voltar</a>
        </div>
        <form action="/valores/@valores.Codigo/modificarcategoria" method="post">
            <div class="form-group">
                <label for="Nome">Código:</label>
                <input class="form-control" id="disabledInput" type="text" value="@valores.Codigo" disabled="">
            </div>

            <div class="form-group">
                <label for="data">Categoria:</label>
                <input type="text" class="form-control" id="categoria" value="@valores.Categoria" name="categoria">
            </div>
            <button type="submit" class="btn btn-default">Alterar</button>
        </form>
    </div>
</div>

