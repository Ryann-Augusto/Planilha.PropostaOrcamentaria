
@{
    List<md_Planilha.mdJaneiro> usuario = ViewBag.Usuarios;
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["sucesso"] != null)
{
    <div class="alert alert-success">@TempData["sucesso"]</div>
}
@if (TempData["erro"] != null)
{
    <div class="alert alert-danger">@TempData["erro"]</div>
}

<h2>Cadastro de Funcionários</h2>
<h2>@ViewBag.Nome</h2>

<div class="container">
    <br />
    <div class="row">
        <button class="btn btn-success fa fa-user-plus pull-right fa-2x" data-toggle="modal" data-target=".cadastrar" style="margin-bottom:10px;"><span style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">&nbsp;Cadastrar</span></button>
        <br />
        <table class="table table-bordered">
            <tr>
                <th>Código</th>
                <th>Usuario</th>
                <th>Senha</th>
                <th>Nível</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var usu in usuario)
            {
        <tr>
            <td>@usu.CodigoUsuario</td>
            <td>@usu.NomeUsuario</td>
            <td>@usu.SenhaUsuario</td>
            @{if (usu.NivelUsuario == 1)

                {
                    <td>Administrador</td>
                }
                else if (usu.NivelUsuario == 2)
                {
                    <td>Funcionário</td>
                }
            }
            <td>
                <a style="width:100px;" class="btn btn-primary fa fa-pencil pull-right" href="/conta/@usu.CodigoUsuario/editar"><span style="font-family: Fantasy; font-size: 20px; ">&nbsp;Editar</span></a>
            </td>
            <td>
                <a class="btn btn-danger fa fa-pencil pull-right" href="/conta/@usu.CodigoUsuario/excluir"><span style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">&nbsp;Excluir</span></a>
            </td>
        </tr>
            }
        </table>
    </div>
</div>

@*Inicio do popup cadastrar*@
<div class="modal fade cadastrar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button data-dismiss="modal" class="close"> <span>&times;</span></button>
                <div class="modal-title"><h3><b>Cadastrar</b></h3></div>
            </div>
            <form action="/conta/cadastro" method="post">
                <div class="modal-body">


                    <div class="form-group">
                        <label for="textNome" class="control-label">Nome</label>
                        <input name="nome" id="textNome" class="form-control" placeholder="Digite seu Nome..." type="text" required>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="control-label">Senha</label>
                        <input name="senha" type="password" class="form-control" id="inputPassword" placeholder="Digite sua Senha..."
                               data-minlength="6" required>
                        <span class="help-block">Mínimo de seis (6) digitos</span>
                    </div>

                    <div class="form-group">
                        <label for="inputConfirm" class="control-label">Confirme a Senha</label>
                        <input name="confirmsenha" type="password" class="form-control" id="inputConfirm" placeholder="Confirme sua Senha..."
                               data-match="#inputPassword" data-match-error="Atenção! As senhas não estão iguais." required>
                        <div class="help-block with-errors"></div>
                    </div>

                    <div class="form-group">
                        <label for="Nome">Cargo:</label>
                        <select class="form-control" name="cargo">
                            <option value="vazio">Selecione o nível</option>
                            <option value="1">Administrador</option>
                            <option value="2">Funcionário</option>
                        </select>
                    </div>



                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary">Cadastrar</button>
                    <button class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@*Inicio do popup Editar*@
<div class="modal fade editar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button data-dismiss="modal" class="close"> <span>&times;</span></button>
                <div class="modal-title"><h3>Editar</h3></div>
            </div>
            <div class="modal-body">
                    <label for="textNome" class="control-label">Nome</label>
                    <input type="text" class="form-control" id="nome" value="" name="nome">
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>
